.row
  %form{action: '/search', method: 'GET'}
    .large-10.columns
      %input{type: 'text', name: 'term', placeholder: 'Package Name'}
    .large-2.columns
      %input{type: 'submit', value: 'Search', class: "tiny button"}

.row
  / Main Feed
  / This has been source ordered to come first in the markup (and on small devices) but to be to the right of the nav on larger screens
  .large-12.columns
    - @packages.each do |package|
      / Feed Entry
      .row
      .large-3.columns.small-3

      .large-9.columns
        %p
          %strong 
            = package.name
            \-
            = package.latest_version_number
        .row
          .large-3.columns.small-3
            Description: 
          .large-9.columns
            = package.full_description
        .row
          .large-3.columns.small-3
            Date/Publication:
          .large-9.columns
            = package.date_publication
        .row
          .large-3.columns.small-3
            Author:
          .large-9.columns
            = package.authors        
        .row
          .large-3.columns.small-3
            Maintainer:
          .large-9.columns
            = package.maintainers     
        .row
          .large-3.columns.small-3
            Other Versions:
          .large-9.columns
            = package.versions.pluck(:number).join(', ')     
      / End Feed Entry
      %hr/

  
  = paginate(@packages)
